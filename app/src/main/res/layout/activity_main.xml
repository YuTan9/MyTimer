<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="-25dp"
    tools:layout_editor_absoluteY="92dp">

    <Button
        android:id="@+id/start1"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/amiko"
        android:background="@drawable/round_button"
        android:rotation="180"
        android:text=":30"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_601"
        android:layout_width="100dp"
        android:layout_height="44dp"
        android:background="@drawable/round_button"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/amiko"
        android:rotation="180"
        android:text="+ :60"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/start1"
        app:layout_constraintEnd_toStartOf="@+id/start1" />

    <Button
        android:id="@+id/stop1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/amiko"
        android:background="@drawable/round_button"
        android:rotation="180"
        android:text="+:10"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/add_601"
        app:layout_constraintEnd_toStartOf="@+id/add_601" />

    <Button
        android:id="@+id/reset1"
        android:layout_width="215dp"
        android:layout_height="44dp"
        android:background="@drawable/round_button"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/amiko"
        android:rotation="180"
        android:text=":00"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/start1"
        app:layout_constraintTop_toTopOf="@+id/start1" />

    <Button
        android:id="@+id/reset2"
        android:layout_width="215dp"
        android:layout_height="44dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/amiko"
        android:text=":00"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/start2"
        app:layout_constraintStart_toEndOf="@+id/start2" />

    <Button
        android:id="@+id/add_602"
        android:layout_width="100dp"
        android:layout_height="44dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/amiko"
        android:text="+ :60"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/start2"
        app:layout_constraintTop_toTopOf="@+id/start2" />

    <Button
        android:id="@+id/stop2"
        android:layout_width="100dp"
        android:layout_height="44dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/amiko"
        android:text="+:10"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/add_602"
        app:layout_constraintTop_toTopOf="@+id/add_602" />

    <TextView
        android:id="@+id/timer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:fontFamily="@font/roboto_medium"
        android:text=":00.0"
        android:textColor="@color/white"
        android:textSize="120dp"
        app:layout_constraintBottom_toTopOf="@+id/start2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:fontFamily="@font/roboto_medium"
        android:rotation="180"
        android:text=":00.0"
        android:textColor="@color/white"
        android:textSize="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start1" />

    <Button
        android:id="@+id/start2"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="36dp"
        android:fontFamily="@font/amiko"
        android:text=":30"
        android:background="@drawable/round_button"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>